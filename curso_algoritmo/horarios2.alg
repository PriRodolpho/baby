Algoritmo "horario2"


Var

   horario : inteiro

Inicio

      escreva("Digite o horário: ")
      leia(horario)

      se horario < 12 entao
         escreval("Bom dia!")
      senao
           se horario < 18 entao
           escreval("Boa tarde!")
           senao
                escreval("Boa noite!")
                fimse
           fimse

Fimalgoritmo